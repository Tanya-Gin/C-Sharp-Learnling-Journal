<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="文件">
                <MenuItem Header="打开" IsCheckable="True"/>
                <MenuItem Header="保存" IsCheckable="True"/>
                <MenuItem Header="另存为" IsCheckable="True"/>
                <MenuItem Header="退出" IsCheckable="True"/>
            </MenuItem>
        </Menu>
        <StackPanel>
            <Border Width="200" Height="200" Background="Red"/>
        </StackPanel>
    </Grid>
</Window>
